//https://leetcode.com/problems/remove-element/

class Solution {
    public int removeElement(int[] nums, int val) {
        //set the pointer on first index
        int pointer = 0; //to reset the element positions in array

        //traverse the array and check if it matches target
        for(int i = 0; i < nums.length -1 ; i++) {
            if(nums[i] != val) { //no change if it doesnt match
                nums[pointer] = nums[i];
                pointer++;
            }

        }
        return pointer;
    }
}
