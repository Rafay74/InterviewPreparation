// https://leetcode.com/problems/reverse-string/description/

class Solution {
    public void reverseString(char[] s) {
        int start = 0;
        int end = s.length - 1;

        while ( start <= end) {
            // basic swap statement
            char temp = s[start];
            s[start] = s[end];
            s[end] = temp;

            //after a swap we have to increment start
            // and decrement end
            start ++;
            end --;

        }
        
    }
}
